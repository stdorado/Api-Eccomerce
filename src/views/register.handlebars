<div class="container mx-auto mt-10">
  <h1 class="text-3xl font-bold text-center mb-4">Register</h1>
  <form id="registerForm" method="POST" class="max-w-md mx-auto">
    <div class="mb-4">
      <label for="first_name" class="block text-gray-700 font-bold">First Name</label>
      <input type="text" id="first_name" name="first_name" class="w-full p-2 border border-gray-300 rounded">
    </div>
    <div class="mb-4">
      <label for="last_name" class="block text-gray-700 font-bold">Last Name</label>
      <input type="text" id="last_name" name="last_name" class="w-full p-2 border border-gray-300 rounded">
    </div>
    <div class="mb-4">
      <label for="email" class="block text-gray-700 font-bold">Email</label>
      <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300 rounded">
    </div>
    <div class="mb-4">
      <label for="password" class="block text-gray-700 font-bold">Password</label>
      <input type="password" id="password" name="password" class="w-full p-2 border border-gray-300 rounded">
    </div>
    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Register
    </button>
  </form>
</div>

    <script src="/js/register.js"></script>