<div class="flex flex-col items-center justify-center min-h-screen">
  <h1 class="text-3xl font-semibold mb-4">Login</h1>
  <form id="loginForm" class="w-1/3">
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Email"
      class="w-full p-2 mb-2 border border-gray-300 rounded"
      required
    />
    <input
      type="password"
      name="password"
      id="password"
      placeholder="Password"
      class="w-full p-2 mb-2 border border-gray-300 rounded"
      required
    />
    <a
      href="/register"
      class="text-blue-500 hover:underline"
    >
      Doesn't have an account yet?
    </a>
    <button
      type="submit"
      class="w-full mt-4 p-2 bg-blue-500 text-white rounded hover:bg-blue-600"
    >
      Login
    </button>
  </form>

  <p id="error-message" class="text-red-500 mt-4"></p>
</div>

<script src="/js/login.js"></script>