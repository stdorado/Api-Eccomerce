 <div class="container mx-auto mt-8">
        <h1 class="text-center text-3xl font-bold mb-6">ADD LOCATIONS</h1>
        <h3 class="text-red-500 mb-4">{{error}}</h3>
        <div class="flex justify-center">
            <div class="w-2/3 p-4 bg-white rounded-lg shadow-md">
                <!-- Formulario para agregar un producto -->
                <form id="addProductForm" class="mb-6">
                    <h2 class="text-2xl font-bold mb-4">ADD PRODUCT</h2>
                    <div class="mb-4">
                        <input
                            type="text"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="newProductTitle"
                            id="newProductTitle"
                            placeholder="Título del producto"
                        />
                    </div>
                    <div class="mb-4">
                        <input
                            type="text"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="newProductDescription"
                            id="newProductDescription"
                            placeholder="Descripción del producto"
                        />
                    </div>
                    <div class="mb-4">
                        <input
                            type="number"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="newProductPrice"
                            id="newProductPrice"
                            placeholder="Precio del producto"
                        />
                    </div>
                    <div class="mb-4">
                        <input
                            type="text"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="newProductCode"
                            id="newProductCode"
                            placeholder="Código del producto"
                        />
                    </div>
                    <div class="mb-4">
                        <input
                            type="number"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="newProductStock"
                            id="newProductStock"
                            placeholder="Stock del producto"
                        />
                    </div>
                    <div class="mb-4">
                        <input
                            type="text"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="newProductCategory"
                            id="newProductCategory"
                            placeholder="Categoría del producto"
                        />
                    </div>
                    <button type="submit" class="w-full py-2 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600">Add Product</button>
                </form>

                <!-- Formulario para actualizar un producto -->
                <form id="updateProductForm" class="mb-6">
                    <h2 class="text-2xl font-bold mb-4">UPDATE PRICE</h2>
                    <div class="mb-4">
                        <input
                            type="number"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="updateProductId"
                            id="updateProductId"
                            placeholder="ID del producto Actualizado"
                        />
                    </div>
                    <div class="mb-4">
                        <input
                            type="number"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="updateProductPrice"
                            id="updateProductPrice"
                            placeholder="Actualiza el Precio"
                        />
                    </div>
                    <button type="submit" class="w-full py-2 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-yellow-600">Update</button>
                </form>

                <!-- Formulario para eliminar un producto -->
                <form id="deleteForm">
                    <h2 class="text-2xl font-bold mb-4">DELETE PRODUCT</h2>
                    <div class="mb-4">
                        <input
                            type="number"
                            class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:border-blue-500"
                            name="deleteProductId"
                            id="deleteProductId"
                            placeholder="ID del producto a eliminar"
                        />
                    </div>
                    <button type="submit" class="w-full py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600">Delete</button>
                </form>
            </div>
        </div>
    </div>
<script type="module" src="/Tp-final/src/public/js/realTimeProducts.js"></script>
 <script src="/socket.io/socket.io.js"></script>
